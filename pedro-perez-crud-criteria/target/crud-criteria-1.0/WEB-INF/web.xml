<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <filter>
        <filter-name>CreateListFilter</filter-name>
        <filter-class>com.arelance.filter.webfilter.CreateListFilter</filter-class>
    </filter>
    <filter>
        <filter-name>GenreWebFilter</filter-name>
        <filter-class>com.arelance.filter.webfilter.GenreWebFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DepartmentWebFilter</filter-name>
        <filter-class>com.arelance.filter.webfilter.DepartmentWebFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MinSalaryWebFilter</filter-name>
        <filter-class>com.arelance.filter.webfilter.MinSalaryWebFilter</filter-class>
    </filter>    
    <filter>
        <filter-name>MaxSalaryWebFilter</filter-name>
        <filter-class>com.arelance.filter.webfilter.MaxSalaryWebFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CreateListFilter</filter-name>
        <url-pattern>/actions</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>GenreWebFilter</filter-name>
        <url-pattern>/actions</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DepartmentWebFilter</filter-name>
        <url-pattern>/actions</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MinSalaryWebFilter</filter-name>
        <url-pattern>/actions</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MaxSalaryWebFilter</filter-name>
        <url-pattern>/actions</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>preloaderservlet</welcome-file>
    </welcome-file-list>
</web-app>
